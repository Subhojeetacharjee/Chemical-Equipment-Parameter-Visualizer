# =============================================================================
# Django Settings
# =============================================================================
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=False

# =============================================================================
# Deployment Settings (Render)
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,your-app-name.onrender.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Database URL (provided by Render for PostgreSQL)
DATABASE_URL=postgres://user:password@host:port/database

# =============================================================================
# SendGrid Email Configuration
# =============================================================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# OTP Configuration
# =============================================================================
OTP_EXPIRY_MINUTES=10
